{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": ["error", "double"],
        "comma-dangle": ["error", "never"],
        "import/extensions": ["error", "ignorePackages"],
        "operator-linebreak": ["error", "after", { "overrides": { "?": "before", ":": "before" } }],
        "no-underscore-dangle": "off",
        "no-plusplus": "off"
    }
}
